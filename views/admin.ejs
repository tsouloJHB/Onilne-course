<!DOCTYPE html>
<html>
<head>
  <title>courses</title>
  <link rel="stylesheet" href="/css/style2.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
</head>
<body>
    <% if (isAdmin) { %>
        <!-- Admin page content here -->
        <h1>Welcome to the Admin Page</h1>
        <!-- Add your admin page content -->
          <!-- Navigation -->
  <div class="navbar">
    <div class="navbar-logo">Ai Tech</div>
    <ul>
      <li><a href="#">Home</a></li>
      <li><a href="#">Courses</a></li>
      <li><a href="#">Contact</a></li>
      <li><a href="#">Sign Out</a></li>
    </ul>
  </div>
  <ul class="nav">
    <li><a href="/courses">courses</a></li> 
    
  </ul>

  <div>
    </div>

    <div class="outline_courses_info">
      <div id="accordion">
        <% courses.forEach(function(course) { %>
          <div class="card">
            <div class="card-header" id="<%=course._id %>">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#<%=course._id+course._id %>" aria-expanded="false" aria-controls="collapseTwo">
                        <i class="flaticon-question"></i> <%= course.title %>
                    </button>
            
                 
                       
                </h5>
            </div>
            <div id="<%=course._id+course._id %>" class="collapse" aria-labelledby="<%=course._id %>" data-parent="#accordion">
                <div class="card-body">
                  <%= course.courseDesc %>
                </div>
            </div>
          </div>
      <% }); %>
      </div>
    </div>
      <% } else { %>
        <% if (user) { %>
          <!-- If user is logged in but not an admin, redirect to home page -->
          <script>
            window.location.href = "/";
          </script>
        <% } else { %>
          <!-- If user is not logged in, show login form or redirect to login page -->
          <!-- Add your login form or redirect to login page code here -->
        <% } %>
      <% } %>
    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</body>
</html>