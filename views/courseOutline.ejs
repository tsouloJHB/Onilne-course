     body {
      font-family: Arial, sans-serif;
      padding: 20px; /* Add padding to both sides */
    }

    .container {
      display: flex;
    }

    .column {
      flex: 2;
      padding: 20px;
    }

    .video {
      width: 100%;
      height: 360px; /* Adjust the height as needed */
    }

    h1 {
      color: black;
    }

    .sub-titile {
      color: gray;
    }

    p {
      margin-top: 20px;
    }

    .list {
      padding-top: 20px;
      padding-bottom: 20px;
    }

    ul {
      list-style-type: disc;
    }
  </style>
</head>
