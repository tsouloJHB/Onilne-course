<!-- courses.ejs -->
<!DOCTYPE html>
<html>

  <title>Create topic</title>
  <%- include('partials/header') %>

<body>
  <!-- Navigation -->
  <%- include('partials/clientNav') %>
  <h1>Courses</h1>
   <a href="/course/course-topics/<%=courseId %>"><button>Back</button></a>
    <% if (typeof error !== 'undefined') { %>
      <p><strong>Error:</strong> <%= error %></p>
    <% } %>

    <form action="/topics" method="POST">
      <label for="topicTitle">Topic Title:</label>
      <input type="text" id="topicTitle" name="topicTitle" required>
      
      <label for="topicDesc">Topic Description:</label>
      <input type="text" id="topicDesc" name="topicDesc" required>

      <label for="materialContent">Material Content:</label>  
      <textarea id="materialContent" cols="50" rows="10" name="materialContent" required></textarea>

      <label for="materialVideo">Material Video:</label>
      <input type="text" id="materialVideo" name="materialVideo">
      <input type="hidden" id="materialVideo" name="courseId" value="<%=courseId %>">
      <button type="submit">Create</button>
    </form>

  </body>
</html>
