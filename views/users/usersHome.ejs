<!DOCTYPE html>
<html>

  <title>user-dashboard</title>
  <%- include('../partials/header') %>

<body>
  <!-- Navigation -->
  <%- include('../partials/clientNav') %>
  <br/>
<div id="accordion">
    <% if(courses.length == 0){ %>
        <p>You have not active courses</p>
     <%}%>
     <% topCourses.forEach(function(course) { %>
        <div class="card">
          <div class="card-header" id="<%=course._id %>">
              <h5 class="mb-0">
                  <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#<%=course._id+course._id %>" aria-expanded="false" aria-controls="collapseTwo">
                      <i class="flaticon-question"></i> <%= course.title %>
                  </button>
                  <!-- <form action="course/register" method="POST">
                    <input type="hidden" value="<%=course._id %>" name="courseId" />
                    <button class="btn">Register</button>
                  </form> -->

                  <a href="/course/view/<%=course._id %>"><button class="btn">View</button></a>
                     
              </h5>
          </div>
          <div id="<%=course._id+course._id %>" class="collapse" aria-labelledby="<%=course._id %>" data-parent="#accordion">
              <div class="card-body">
                <%= course.courseDesc %>
              </div>
              <img src="<%=course.courseImage%>"/>
          </div>
        </div>
    <% }); %>   
    <p>Your Courses</p>
    <% courses.forEach(function(course) { %>
   
      <div class="card">
        <div class="card-header" id="<%=course._id %>">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#<%=course._id+course._id %>" aria-expanded="false" aria-controls="collapseTwo">
                    <i class="flaticon-question"></i> <%= course.title %>
                </button>
                <span><%=course.percentage %>% completed</span>
                <span><a href="/topics/<%=course._id %>"> continue</a></span>
                   
            </h5>
        </div>
        <div id="<%=course._id+course._id %>" class="collapse" aria-labelledby="<%=course._id %>" data-parent="#accordion">
            <div class="card-body">
              <%= course.courseDesc %>
            </div>
            <img src="<%=course.courseImage%>"/>
        </div>
      </div>
     
  <% }); %>
  </div>
</div>
 </div>
</div>
<ul id="suggestions-list">

</ul>
<script>
  
</script>
<%- include('../partials/footer') %>

</body>
