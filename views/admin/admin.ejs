  <h2>Create Course</h2>
  <form action="/course" method="POST">
    <input type="text" name="title" placeholder="Title" required>
    <input type="number" name="courseNo" placeholder="Course No" required value="<%=coursesCount %>">
    <input type="text" name="courseDesc" placeholder="Course Description" required>
    <input type="text" name="courseImage" placeholder="Course Image URL">
    <input type="text" name="courseVideo" placeholder="Course Video URL">
    <button type="submit">Create Course</button>
  </form>
  <div>
    </div>

    <div class="outline_courses_info">
      <a href="">Create course</a>
      <% if(courses.length == 0){ %>
      <p>No courses found </p> 
      <%} %>
      <div id="accordion">
        <% courses.forEach(function(course) { %>
          <p> <%= course.title %></p>
          <div class="card">
            <div class="card-header" id="<%=course._id %>">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#<%=course._id+course._id %>" aria-expanded="false" aria-controls="collapseTwo">
                        <i class="flaticon-question"></i> <%= course.title %>
                    </button>
                
                    <span><a href="/topics/<%=course._id %>"> course</a></span>
                       
                </h5>
            </div>
            <div id="<%=course._id+course._id %>" class="collapse" aria-labelledby="<%=course._id %>" data-parent="#accordion">
                <div class="card-body">
                  <%= course.courseDesc %>
                </div>
                <img src="<%=course.courseImage%>"/>
            </div>
          </div>
      <% }); %>
      </div>
    </div>
   
